<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="dev" translate="label">
           <group id="ecomcoders_loggly" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
               <label>Loggly Syslog UDP Logger</label>
               <field id="app_name" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                   <label>App Identifier</label>
                   <comment>Your app identifier here.</comment>
               </field>
               <field id="loggly_token" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                   <label>Loggly Token</label>
               </field>
           </group>
        </section>
    </system>
</config>